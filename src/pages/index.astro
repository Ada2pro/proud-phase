---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
// 添加下面这一行：
console.log("全部文章数量:", posts.length, "过滤后文章数量:", sortedPosts.length);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        Xzywoo~
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block"
        aria-label="RSS 订阅"
        title="RSS 订阅"
      >
        <IconRss
          width={20}
          height={20}
          class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
        />
        <span class="sr-only">RSS 订阅</span>
      </a>

      <p>
        My name is Zhuoyu Xie. I am currently a first-year Ph.D. student at the <a href="https://www.ucas.ac.cn/" target="_blank" rel="noopener noreferrer" class="underline decoration-dashed underline-offset-4 hover:text-accent">University of Chinese Academy of Sciences (UCAS)</a> in the <a href="https://soc.ucas.ac.cn/index.php/zh/" target="_blank" rel="noopener noreferrer" class="underline decoration-dashed underline-offset-4 hover:text-accent">School of Cryptology</a>, under the supervision of <a href="https://zhengfangyu.github.io/" target="_blank" rel="noopener noreferrer" class="underline decoration-dashed underline-offset-4 hover:text-accent">Associate Professor Fangyu Zheng</a>.
        Before joining UCAS, I obtained my Bachelor's degree from the <a href="https://www.ustc.edu.cn/" target="_blank" rel="noopener noreferrer" class="underline decoration-dashed underline-offset-4 hover:text-accent">University of Science and Technology of China (USTC)</a>, <a href="https://cybersec.ustc.edu.cn/main.htm" target="_blank" rel="noopener noreferrer" class="underline decoration-dashed underline-offset-4 hover:text-accent">School of Cyber Science and Technology</a>.
        My research interests focus on cryptographic algorithm acceleration and fully homomorphic encryption (FHE). I'm also passionate about AI infrastructure.
      </p>
      <!-- <p class="mt-2">
        Read the blog posts or check
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="https://github.com/satnaing/astro-paper#readme"
        >
          README
        </LinkButton> for more info.
      </p> -->
      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">社交账号:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">精选文章</h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">最近文章</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        查看全部文章
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
